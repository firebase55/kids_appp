<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:orientation="vertical"
    tools:context=".Entertinment_mainActivity.Entertainment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/shape">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Entertainment"
            android:textColor="#fff"
            android:textSize="40dp"
            android:textStyle="bold">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1.6"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:layout_marginLeft="20dp"
                android:layout_height="110dp"
                android:background="@drawable/newgameicon">

            </ImageView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:text="Game"
                android:gravity="center"
                android:onClick="dilogbox"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_height="100dp">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:layout_marginLeft="20dp"
                android:text="Cartoon"
                android:onClick="cartoonactivity"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_height="100dp">

            </TextView>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_height="110dp"
                android:textColor="@color/black"
                android:background="@drawable/catonnew">

            </ImageView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:layout_marginLeft="20dp"
                android:background="@drawable/poem"
                android:layout_height="120dp">

            </ImageView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:text="poem"
                android:gravity="center"
                android:onClick="poemActivity"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_height="100dp">

            </TextView>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight=".8"
        android:background="@drawable/shape2"
        android:layout_height="0dp">

    </LinearLayout>
</LinearLayout>